<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView android:id="@+id/tvDetailNom" android:textSize="24sp" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tvDetailPrio" android:textSize="18sp" android:layout_marginBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tvDetailDate" android:layout_marginBottom="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tvDetailDesc" android:textSize="16sp" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/ivDetailImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <Button android:id="@+id/btnBack" android:text="Retour" android:layout_marginTop="30dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
